{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1 class="title">Liste des séries</h1>

    <div class="flex_wrap justify-content-around align-items-center">
    {% for program in programs %}
        <div class="program">
            <h2 class="title2">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
            <p class="flex_wrap justify-content-around align-items-center mb-0">
                <a class="voir_fiche" href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
                <a class="image_voir_fiche d-block" href="{{ path("program_show", { id: program.id }) }}"><img src="{{ program.poster }}" alt="{{ program.title }}" class="image_fiche" /></a>
            </p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    </div>

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
