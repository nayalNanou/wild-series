{% extends 'base.html.twig' %}

{% block title %}Acteur : {{ actor.name }}{% endblock %}

{% block body %}
    <h1 class="title3">{{ actor.name }}</h1>

    <div class="list_program_actor">
        <p>Liste des séries associées à cet acteur :</p>

        <ul>
            {% for program in programs %}
                <li><a href="{{ path("program_show", { slug: program.slug }) }}">{{ program.title }}</a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
